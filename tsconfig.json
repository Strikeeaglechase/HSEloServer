{
	"compilerOptions": {
		"target": "ES2022",
		"moduleResolution": "node",
		"module": "esnext",
		"allowSyntheticDefaultImports": true,
		"outDir": "dist/",
		"baseUrl": "./src",
		"lib": [
			"ES2023"
		],
		"types": [
			"node"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true
	},
	"include": [
		"src/"
	]
}